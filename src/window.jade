doctype
meta(charset="UTF-8")
style.
  html, body {
    padding: 0;
    margin: 0;
    height: 100%;
  }

  #the_frame {
    width: 100%;
    height: 100%;
    border: 0;
  }

script
  :coffee
    window.onload = ->
      window.addEventListener 'message', (e)->
        console.log 'message', e
        switch e.data?.command
          when "close" then chrome.app.window.current().close()
    iframe = document.getElementById("the_frame")
    

iframe#the_frame(src="index.html")